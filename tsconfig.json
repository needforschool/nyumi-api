{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@guards/*": ["./src/guards/*"],
      "@decorators/*": ["./src/interfaces/decorators/*"],
      "@dto/*": ["./src/interfaces/dto/*"],
      "@enums/*": ["./src/interfaces/enums/*"],
      "@schemas/*": ["./src/interfaces/schemas/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@modules/*": ["./src/modules/*"],
      "@pipes/*": ["./src/pipes/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "dist"]
}