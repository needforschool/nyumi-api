{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@guards/*": [
        "./src/guards/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}